pipeline {
    agent any

    environment {
        PORT = '5000'
        NODE_ENV = 'production'
        MONGODB_URI = credentials('mongodb-uri')
    }

    triggers {
        pollSCM('* * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'Pulling latest source code...'
                checkout scm
            }
        }

        stage('Build') {
            steps {
                echo 'Building backend and frontend Docker images...'
                sh 'docker compose -f infra/docker-compose.yml build --progress=plain'
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                sh 'docker compose -f infra/docker-compose.yml down -v'
                sh 'docker compose -f infra/docker-compose.yml up -d'
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline succeeded!'
        }
        failure {
            echo '❌ Pipeline failed!'
        }
    }
}